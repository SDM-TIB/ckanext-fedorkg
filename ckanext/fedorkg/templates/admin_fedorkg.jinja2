{% extends "admin/base.html" %}

{% import 'macros/form.html' as form %}

{% macro row_type(notification_type) %}
    {% if notification_type | lower == 'success' %}
        {{ 'row_success' }}
    {% elif notification_type | lower == 'error' %}
        {{ 'row_danger' }}
    {% else %}
        {{ 'row_notice' }}
    {% endif %}
{% endmacro %}

{% block primary_content_inner %}
    {% asset 'fedorkg/admin-css' %}

    <h2>{% trans %}Default Query{% endtrans %}</h2>
    <div>
        <form method="POST" action="{{ h.url_for('fedorkg_admin.admin') }}">
            {{ form.input('ckanext.fedorkg.query.name', label=_('Default Query Name'), value=query_name, placeholder=_('default query name'), is_required=true) }}
            {{ form.textarea('ckanext.fedorkg.query', 'field-ckanext.fedorkg.query', label=_('Default Query'), value=query, is_required=true) }}
            <input type="hidden" name="action" value="default_query">
            <div class="form-actions">
                <button type="submit" class="btn btn-primary" title="{% trans %}Set default query{% endtrans %}">{% trans %}Update{% endtrans %}</button>
            </div>
        </form>
    </div>

    <hr>
    <h2>{% trans %}Query Execution Timeout{% endtrans %}</h2>
    <div>
        <form method="POST" action="{{ h.url_for('fedorkg_admin.admin') }}">
            {{ form.input('ckanext.fedorkg.timeout', label=_('Query Timeout (in seconds)'), value=timeout, placeholder=_('query execution timeout'), is_required=true, type='number', attrs={'class': 'form-control', 'min': 0}) }}
            <input type="hidden" name="action" value="query_timeout">
            <div class="form-actions">
                <button type="submit" class="btn btn-primary" title="{% trans %}Set query timeout{% endtrans %}">{% trans %}Update{% endtrans %}</button>
            </div>
        </form>
    </div>

    <hr>
    <h2>{% trans %}Knowledge Graphs in the Federation{% endtrans %}</h2>
    <table class="table table-header table-hover table-bordered">
        <thead>
            <tr>
                <th colspan="2">{% trans %}Knowledge Graph{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
            {% for kg in kgs %}
                <tr>
                    <td><a href="{{ kg }}" target="_blank">{{ kg }}</a></td>
                    <td class="center">
                        <form class="admin" method="POST" action="" data-module="basic-form" novalidate="">
                            <a class="btn btn-danger btn-sm" title="{% trans %}Remove knowledge graph from the federation{% endtrans %}" href="{{ h.url_for('fedorkg_admin.delete_kg', **{'kg': kg | urlencode | replace('/', '%2f') }) }}" data-module="confirm-action" data-module-content="{{ _('Are you sure you want to delete this knowledge graph?') }}">
                                <i class="fa fa-trash"></i>
                            </a>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            <tr>
                <form class="admin" method="POST" action="{{ h.url_for('fedorkg_admin.add_kg') }}">
                    <td>
                        <input class="form-control" type="text" name="kg" placeholder="{% trans %}URL of the SPARQL endpoint of the knowledge graph{% endtrans %}" size="60" required>
                    </td>
                    <td class="center">
                        <button class="btn btn-success btn-sm" title="{% trans %}Add knowledge graph to the federation{% endtrans %}">
                            <i class="fa fa-plus"></i>
                        </button>
                    </td>
                </form>
            </tr>
        </tbody>
    </table>

    <hr>
    <h2>{% trans %}FedORKG News{% endtrans %}</h2>
    <div>
        {% if fedorkg_news %}
            <table class="table table-header table-hover table-bordered" id="fedorkg_news">
                <thead>
                <tr>
                    <th>{% trans %}Knowledge Graph{% endtrans %}</th>
                    <th>{% trans %}Message{% endtrans %}</th>
                    <th>{% trans %}Date{% endtrans %}</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for news in fedorkg_news %}
                    <tr class="{{ row_type(news.notification_type) | trim }}">
                        <td>{{ news.endpoint_url }}</td>
                        <td>{{ news.message }}</td>
                        <td>{{ news.date }}</td>
                        <td class="center">
                            <form method="POST" action="{{ h.url_for('dashboard.news') }}">
                                <input type="hidden" name="news_id" value="{{ news.identifier }}">
                                <button class="btn btn-danger btn-sm" title="{% trans %}Remove this news entry{% endtrans %}">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            {% trans %}There are currently no news about added or deleted knowledge graphs.{% endtrans %}
            {% trans %}If you add or delete knowledge graphs to FedORKG, the result of the background tasks will show up here.{% endtrans %}
        {% endif %}
    </div>
{% endblock %}

{% block secondary_content %}
    <div class="module module-narrow module-shallow">
        <h2 class="module-heading">
            <i class="fa fa-info-circle"></i>
            FedORKG
        </h2>
        <div class="module-content">
            <p>{% trans %}Configuration options to manage the FedORKG instance.{% endtrans %}</p>
            <p><strong>{% trans %}Default Query Name{% endtrans %}:</strong> {% trans %}The title of the tab in the SPARQL query editor holding the default query.{% endtrans %}</p>
            <p><strong>{% trans %}Default Query{% endtrans %}:</strong> {% trans %}The default query shown in the SPARQL query editor.{% endtrans %}</p>
            <p><strong>{% trans %}Query Timeout{% endtrans %}:</strong> {% trans %}The maximum time in seconds a query is executed. Unfinished queries are canceled and return no result.{% endtrans %}</p>
            <p><strong>{% trans %}Knowledge Graphs in the Federation{% endtrans %}:</strong> {% trans %}Mange the knowledge graphs that are included in the federation of FedORKG. Keep in mind that only included knowledge graphs can be queried.{% endtrans %}</p>
            <p><strong>{% trans %}FedORKG News{% endtrans %}:</strong> {% trans %}A log of the background tasks for adding and deleting knowledge graphs.{% endtrans %}</p>
        </div>
    </div>
{% endblock %}
